<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyCardView">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageVewFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:transitionName="fruit_photo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:transitionName="fruit_name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageVewFruit"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/fruitFreshness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:transitionName="fruit_freshness"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/imageVewFruit"
        app:layout_constraintTop_toBottomOf="@+id/nameStory"
        tools:text="Description"/>

    <TextView
        android:id="@+id/fruitDisease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:transitionName="fruit_disease"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/imageVewFruit"
        app:layout_constraintTop_toBottomOf="@+id/fruitFreshness"
        tools:text="Description"/>

    <TextView
        android:id="@+id/dateFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:transitionName="fruit_date"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruitDisease"
        tools:text="DD/MM/yyyy"/>




</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>