<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.result.ResultFragment">

    

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fruitImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_bg"
        android:padding="12dp"
        tools:src="@drawable/car1"
        tools:ignore="ImageContrastCheck"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        />

    <TextView
        android:id="@+id/fruitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/name"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/fruitImg"
        app:layout_constraintStart_toStartOf="@id/fruitImg"
        app:layout_constraintTop_toBottomOf="@+id/fruitImg" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fruitFreshnes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@id/fruitImg"
        app:layout_constraintStart_toStartOf="@id/fruitImg"
        app:layout_constraintTop_toBottomOf="@id/fruitName"
        android:background="@drawable/percent_circle_bg"
        >

        <TextView
            android:id="@+id/fruitFreshnesText"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:text="0%"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/fruitDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Disease"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/fruitImg"
        app:layout_constraintStart_toStartOf="@id/fruitImg"
        app:layout_constraintTop_toBottomOf="@id/fruitFreshnes" />




</androidx.constraintlayout.widget.ConstraintLayout>